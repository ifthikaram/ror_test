<% if @article.errors.any? %>
  <h3>Error saving the article</h3>
  <% @article.errors.full_messages.each do |a| %>
    <ul> <li> <%= a %> </li></ul>
  <% end %>
<% end %>


<%= form_with(model:@article, local: true) do |f| %>
  <p>
    <%= f.label :title %></br>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :descrtiption %></br>
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.submit %></br>
  </p>
<% end %>